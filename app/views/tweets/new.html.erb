<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @tweet, local: true) do |form| %>
      <%= form.text_field :name, placeholder: "ニックネーム" %>
      <%= form.text_field :image, placeholder: "画像URL" %>
      <%= form.text_area :text, placeholder: "詳細", rows: "10" %>
      <%= form.submit "投稿" %>
    <% end %>
  </div>
</div>